{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "tailwind.config": ["./tailwind.config.js"],
      "tailwind-variants/dist/config": ["./src/types/empty-module.ts"],
      "@gluestack-ui/nativewind-utils/tva/index": [
        "./src/types/empty-module.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/types/**/*.d.ts",
    "src/types/**/*.ts",
    "nativewind-env.d.ts"
  ]
}
